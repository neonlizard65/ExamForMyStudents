<Page x:Class="Exam.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap">Экзамен по блоку "Основы Информационных Технологий"</TextBlock>
            <Label HorizontalAlignment="Center">Группа</Label>
            <TextBox x:Name="Group"></TextBox>
            <Label HorizontalAlignment="Center">Имя</Label>
            <TextBox x:Name="Name"></TextBox>
            <Label HorizontalAlignment="Center">Фамилия</Label>
            <TextBox x:Name="Surname"></TextBox>
            <TextBlock x:Name="ErrorText" Foreground="Red" FontSize="12" HorizontalAlignment="Center" Visibility="Collapsed">Заполните все поля</TextBlock>
            <Button x:Name="StartBtn" Click="StartButton_Click" Margin="10">Начать</Button>
        </StackPanel>
        
    </Grid>
</Page>
